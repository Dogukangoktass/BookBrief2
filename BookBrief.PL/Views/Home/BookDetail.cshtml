            <div class="row">


                <div class="col-xl-12">
                    <div class="row">
                        <div class="col-xl-12">

                            <div class="single-services d-flex align-items-center mb-0">
                                <div class="features-img">
                                    <img src="~/images/@item.ImageUrl" alt="" style="max-height:330px;">
                                </div>
                                <div class="features-caption">
                                    <h3>@item.BookTitle</h3>
                                    <p>@item.Author</p>
                                    <p></p>

                                    <div class="review">
                                        <p>3 Yorum</p>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <section class="our-client section-padding best-selling">
