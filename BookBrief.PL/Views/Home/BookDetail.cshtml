@model IEnumerable<BookBrief.DL.Models.Book>

@{
    ViewData["Title"] = "BookDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    int sonuc = Convert.ToInt16(TempData["yorum"]);
    if (sonuc == 1)
    {
        <div class="alert alert-secondary" style="background-color:#2ecc71;" role="alert">
            <p style="text-align:center;">Yorumunuz paylaşılması için onay bekliyor.</p>
        </div>
    }
}


@foreach (var item in Model)
{
