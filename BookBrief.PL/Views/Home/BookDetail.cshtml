                        <div class="offset-xl-1 col-lg-9">
                            <p>@item.Summary</p>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="nav-three" role="tabpanel" aria-labelledby="nav-three-tab">

                    <div class="row">
                        <div class="offset-xl-1 col-lg-9">

                            <div class="comments-area">
                                <h4>05 Comments</h4>
                                <div class="comment-list">
                                    @await Component.InvokeAsync("GetComments",@item.BookId)
                                </div>

                            </div>


                            <div class="comment-form">
                                <h4>Yorum Yap</h4>

                                <form class="form-contact comment_form" asp-action="ShareComment" method="post" id="commentForm">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group">
                                                <textarea class="form-control w-100" name="text" id="comment" cols="30" rows="9" placeholder="Yorumunuzu Yazınız"></textarea>
                                                <input name="bookid" value="@item.BookId" hidden>
                                            </div>
                                        </div>

                                    </div>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        if (User.IsInRole("User"))
                                        {

                                            <div class="form-group">
                                                <button type="submit" asp-action="ShareComment" asp-all-route-id="@item.BookId" class="button button-contactForm btn_1 boxed-btn">Yorum Paylaş</button>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="form-group">
                                            <button type="submit" class="button button-contactForm btn_1 boxed-btn">Yorum Yapmak İçin Giriş Yapınız!</button>
                                        </div>
                                    }



                                </form>
                            </div>


                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="nav-four" role="tabpanel" aria-labelledby="nav-four-tab">

