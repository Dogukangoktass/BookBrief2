@model IEnumerable<BookBrief.DL.Models.Book>

@foreach (var item in Model)
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-7 col-lg-8">
                <div class="section-tittle text-center mb-55">
                    <h2>Best Selling Books Ever</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="selling-active">

                    <div class="properties pb-20">
                        <div class="properties-card">
                            <div class="properties-img">
                                <a href="book-details.html"><img src="~/images/@item.ImageUrl" alt=""></a>
                            </div>
                            <div class="properties-caption">
                                <h3><a href="book-details.html">@item.BookTitle</a></h3>
                                <p>@item.Author</p>
                                <div class="properties-footer d-flex justify-content-between align-items-center">
                                    <div class="review">
                                        <p>(<span>120</span> Yorum)</p>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}
